<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.biankaroppelt.masterthesis"
   xmlns:android="http://schemas.android.com/apk/res/android">

   <uses-permission android:name="android.permission.BODY_SENSORS" />
   <uses-permission android:name="android.permission.WAKE_LOCK" />
   <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
   <uses-permission android:name="android.permission.INTERNET" />
   <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

   <application
      android:name="android.support.multidex.MultiDexApplication"
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">
      <meta-data
         android:name="com.google.android.gms.version"
         android:value="@integer/google_play_services_version" />

      <activity
         android:name=".MobileActivity"
         android:label="@string/app_name"
         android:theme="@style/AppTheme.NoActionBar">
         <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
         </intent-filter>
      </activity>
      <activity
         android:name=".NewPilotStudy1AActivity"
         android:label="@string/title_new_pilot_study_1a"
         android:parentActivityName=".MobileActivity"
         android:theme="@style/AppTheme.NoActionBar" />
      <activity
         android:name=".NewPilotStudy1BActivity"
         android:label="@string/title_new_pilot_study_1b"
         android:parentActivityName=".MobileActivity"
         android:theme="@style/AppTheme.NoActionBar" />
      <activity
         android:name=".NewPilotStudy2Activity"
         android:label="@string/title_new_pilot_study_2"
         android:parentActivityName=".MobileActivity"
         android:theme="@style/AppTheme.NoActionBar" />
      <activity
         android:name=".NewMainStudyActivity"
         android:label="@string/title_new_main_study"
         android:parentActivityName=".MobileActivity"
         android:theme="@style/AppTheme.NoActionBar" />

      <service android:name=".SensorReceiverService">
         <intent-filter>
            <action android:name="com.google.android.gms.wearable.BIND_LISTENER" />
         </intent-filter>
      </service>
   </application>

</manifest>